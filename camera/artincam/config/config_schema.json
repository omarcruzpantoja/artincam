{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "camera": {
      "$ref": "#/definitions/Camera"
    }
  },
  "definitions": {
    "Camera": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["rtsp_stream", "video", "image", "image/video"]
        },
        "resolution": {
          "$ref": "#/definitions/Resolution"
        },
        "framerate": {
          "type": "integer",
          "default": 24,
          "minimum": 1
        },
        "bitrate": {
          "type": "integer",
          "minimum": 1
        },
        "recording_time": {
          "type": "integer",
          "default": 10,
          "minimum": 1
        },
        "cycle_rest_time": {
          "type": "integer",
          "default": 0,
          "minimum": 0
        },
        "unit_time": {
          "type": "string",
          "enum": ["s", "m", "h", "d"],
          "default": "m"
        },
        "output_dir": {
          "type": "string"
        },
        "location": {
          "type": "string",
          "pattern": "^[a-z-0-9]+$",
          "description": "Location must contain only lowercase letters and hyphens(-) and max of 30 characters.",
          "maxLength": 30
        },
        "pi_id": {
          "type": ["integer"],
          "minimum": 0,
          "maximum": 9999
        },
        "image_capture_time": {
          "type": "integer",
          "default": 5,
          "minimum": 1
        },
        "image_rest_time": {
          "type": "number",
          "default": 10,
          "minimum": 0
        },
        "image_time_unit": {
          "type": "string",
          "enum": ["s", "m", "h", "d"],
          "default": "s"
        }
      },
      "required": ["mode", "resolution", "output_dir", "location", "pi_id"]
    },
    "Resolution": {
      "type": "object",
      "properties": {
        "width": {
          "type": "integer",
          "minimum": 1,
          "default": 1640
        },
        "height": {
          "type": "integer",
          "default": 1232,
          "minimum": 1
        }
      },
      "required": ["height", "width"]
    }
  },
  "required": ["camera"]
}
